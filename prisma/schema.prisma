generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserActivity {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String?
  channel         Channel
  title           String
  description     String
  action          String
  verb            String?
  endpoint        String?
  requestBody     Json?
  statusCode      Int?
  responseMessage String?
  country         String?
  city            String?
  deviceIpAddress String?
  deviceType      String?
  deviceOs        String?
  browserName     String?
  createdAt       DateTime @default(now())

  @@index([statusCode])
}

enum Channel {
  USSD
  MOBILE
  WEBAPP
  WEBADMIN
  GATEWAY
}
